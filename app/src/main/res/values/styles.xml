<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/green2</item>
        <item name="colorPrimaryVariant">@color/green3</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="KeyboardNumberKeys">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="background">@drawable/rounded_corner</item>
        <item name="android:gravity">center</item>w
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>