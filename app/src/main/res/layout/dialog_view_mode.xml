<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:padding="3dp"
        android:text="@string/invasive_modes"
        android:textColor="#000000"
        android:textSize="25sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="4">

        <Button
            android:id="@+id/pccmv"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.3"
            android:backgroundTint="@color/yellow"
            android:text="@string/pc_cmv"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/pcsimv"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.3"
            android:backgroundTint="@color/yellow"
            android:text="@string/pc_simv"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/vccmv"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.3"
            android:backgroundTint="@color/yellow"
            android:text="@string/vc_cmv"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/vcsimv"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.3"
            android:backgroundTint="@color/yellow"
            android:text="@string/vc_simv"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/prvc"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.3"
            android:backgroundTint="@color/yellow"
            android:text="@string/prvc"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/acv"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.3"
            android:backgroundTint="@color/yellow"
            android:text="@string/acv"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/psv"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.3"
            android:backgroundTint="@color/yellow"
            android:text="@string/psv"
            android:textColor="#000000"
            android:textSize="24sp" />
    </GridLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="12dp"
        android:padding="3dp"
        android:text="@string/non_invasive"
        android:textColor="#000000"
        android:textSize="25sp">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/bpap"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="30dp"
            android:alpha="0.3"
            android:backgroundTint="@color/yellow"
            android:text="@string/bpap"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/cpap"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.3"
            android:backgroundTint="@color/yellow"
            android:text="@string/cpap"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>
</GridLayout>