<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corner_heading"
        android:fontFamily="@font/arimo"
        android:gravity="center"
        android:text="@string/tools"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="35sp" />

    <com.dvbinventek.dvbapp.customViews.MonitoringTextView
        android:id="@+id/tools_pPlat"
        android:layout_width="334dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:monitName="Pplat"
        app:monitUnit="cm H2O" />

    <com.dvbinventek.dvbapp.customViews.MonitoringTextView
        android:id="@+id/tools_autoPeep"
        android:layout_width="334dp"
        android:layout_height="60dp"
        app:monitName="AutoPEEP"
        app:monitUnit="cm H2O" />

    <Button
        android:id="@+id/inspHold"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corners_button"
        android:backgroundTint="@color/colorAccent"
        android:padding="0dp"
        android:text="@string/inspiratory_nhold"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/expHold"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corners_button"
        android:backgroundTint="@color/colorAccent"
        android:padding="0dp"
        android:text="@string/expiratory_hold"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/sigh"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corners_button"
        android:backgroundTint="@color/colorAccent"
        android:padding="0dp"
        android:text="@string/sigh"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hold_auto_release_15_secs"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/calibration"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/rounded_corners_button"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/calibration"
        android:textColor="#000000"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>