<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:columnCount="2"
    android:background="@drawable/rounded_corner"
    android:rowCount="4">

    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/arimo"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:text="@string/name"
        android:textSize="25sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_white_yellow_border_patient">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/patient_name"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corner_white_yellow_border_patient"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:outlineProvider="paddedBounds"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="28sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/age"
        android:textSize="25sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_white_yellow_border_patient">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/patient_age"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corner_white_yellow_border_patient"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:outlineProvider="paddedBounds"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="28sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/massText"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/ibw"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_corner_white_yellow_border_patient"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/patient_weight"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corner_white_yellow_border_patient"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:outlineProvider="paddedBounds"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="28sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/massUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="@string/kg"
            android:textColor="@color/black"
            android:textSize="28sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lengthText"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/height"
        android:textSize="25sp" />

    <LinearLayout>

        <LinearLayout
            android:id="@+id/heightInches"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_corner_white_yellow_border_patient"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/patient_height_ft"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_corner_white_yellow_border_patient"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:outlineProvider="paddedBounds"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="28sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:text="ft"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_corner_white_yellow_border_patient"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/patient_height_in"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_corner_white_yellow_border_patient"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:outlineProvider="paddedBounds"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="28sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:text="in"
                android:textColor="@color/black"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/heightCentimeters"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_corner_white_yellow_border_patient"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/patient_height_cm"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_corner_white_yellow_border_patient"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:outlineProvider="paddedBounds"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="28sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/cm"
                android:textColor="@color/black"
                android:textSize="28sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/room"
        android:textSize="25sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_white_yellow_border_patient">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/patient_room"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corner_white_yellow_border_patient"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:outlineProvider="paddedBounds"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="28sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/bed"
        android:textSize="25sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_white_yellow_border_patient">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/patient_bed"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corner_white_yellow_border_patient"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:outlineProvider="paddedBounds"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="28sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleGroupMassUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:checkedButton="@id/kilograms"
            app:selectionRequired="true"
            app:singleSelection="true">

            <Button
                android:id="@+id/pounds"
                style="@style/OutlinedButton"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/gray1"
                android:text="@string/lbs"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/kilograms"
                style="@style/OutlinedButton"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/gray1"
                android:text="@string/kg"
                android:textAllCaps="false"
                android:textSize="24sp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleGroupPatientLengthUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray1"
            app:checkedButton="@id/centimeter"
            app:selectionRequired="true"
            app:singleSelection="true">

            <Button
                android:id="@+id/inches"
                style="@style/OutlinedButton"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/gray1"
                android:text="@string/inches"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/centimeter"
                style="@style/OutlinedButton"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/gray1"
                android:text="@string/cm"
                android:textAllCaps="false"
                android:textSize="24sp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>

    <Button
        android:id="@+id/dismissButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/ok"
        android:textColor="@color/black"
        android:textSize="22sp" />
</GridLayout>